            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                @Html.LabelFor(m => m.Monster.Wis, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(m => m.Monster.Wis, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @Value = "10", @required = "required" } })
