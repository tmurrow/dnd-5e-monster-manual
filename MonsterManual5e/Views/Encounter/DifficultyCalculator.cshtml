
@{
    ViewBag.Title = "DifficultyCalculator";
}

<h2>DifficultyCalculator</h2>

<div class="row">
    <div class="col-md-12">
        <table id="encounter-difficulty-calculator-table" class="table table-hover table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th class="vg-all" data-column="name">Name</th>
                    <th class="vg-default" data-column="quantity">Quantity</th>
                    <th class="vg-default" data-column="experience">Experience</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var monster in Model.Monsters)
                {
                    <tr>
                        <td>@monster.Name</td>
                        <td>@monster.Size.Name</td>
                        <td>@monster.Experience.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>